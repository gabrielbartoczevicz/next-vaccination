{
  "compilerOptions": {
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": false,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "resolveJsonModule": true, 
    "paths": {
      "@_shared/*": ["./ecosystem/_shared/*"],
      "@http-server/*": ["./ecosystem/http-server/*"],
      "@notifications/*": ["./ecosystem/notifications/*"],
      "@tickets/*": ["./ecosystem/tickets/*"],
    }
  },
  "exclude": ["node_modules", "dist"]
}
