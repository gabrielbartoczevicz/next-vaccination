{
  "compilerOptions": {
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": false,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "resolveJsonModule": true, 
    "paths": {
      "@server/_shared/*": ["./packages/server/_shared/*"],
      "@server/http-server/*": ["./packages/server/http-server/*"],
      "@server/notifications/*": ["./packages/server/notifications/*"],
      "@server/tickets/*": ["./packages/server/tickets/*"],
    }
  },
  "exclude": ["node_modules", "dist"]
}
