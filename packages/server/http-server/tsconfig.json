{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "allowJs": true,
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@modules/*": ["./src/modules/*"],
      "@entities/*": ["./src/domain/entities/*"],
      "@usecases/*": ["./src/domain/usecases/*"],
      "@adapters/*": ["./src/domain/adapters/*"],
      "@external/*": ["./src/external/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
