{
  "name": "@server/http-server",
  "version": "1.0.0",
  "main": "index.ts",
  "license": "MIT",
  "scripts": {
    "dev": "tsnd -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules --respawn src/index.ts",
    "test": "NODE_ENV=test jest --passWithNoTests --runInBand",
    "test:verbose": "NODE_ENV=test jest --passWithNoTests",
    "test:unit": "yarn test -- --watch -c jest-unit.config.js",
    "test:integration": "yarn test -- --watch -c jest-integration.config.js",
    "test:staged": "yarn test -- --findRelatedTests .",
    "test:ci": "yarn test -- --coverage"
  },
  "dependencies": {
    "@prisma/client": "^2.24.1",
    "@server/shared": "*",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.1",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "jest": "^26.6.3",
    "prisma": "^2.24.1",
    "ts-jest": "^26.5.4",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0"
  }
}
